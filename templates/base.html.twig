<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block header %}    
            <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
                   
                <a class="navbar-brand" href="{{ path('app_home')}}">
                <img src="/docs/4.0/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                Le super blog
                </a>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('app_home')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home')}}">Contact</a>
                        </li>
                        <li class="nav-item">
                            {# <div class="dropdown-menu" aria-labelledby="navbarDropdown"> #}
                            <a class="nav-link" href="{{ path('app_home')}}">Inscrption</a>
                            {# <a class="dropdown-item" href="#"></a> #}
                        </li>

                        <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home')}}">Déconnexion</a>
                        </li>

                        <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home')}}">Connexion</a>
                        </li>

                    </ul>
                    
                    <form class="form-inline my-2 my-lg-0 d-flex flex-row">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Rechercher</button>
                    </form>
                </div>
            </nav>
            {% endblock %}

            {% block mainContent %}
            {% endblock %}
        {% endblock %}
    </body>
</html>
